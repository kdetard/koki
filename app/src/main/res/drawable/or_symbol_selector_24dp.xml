<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/checked" android:drawable="@drawable/or_symbol_filled_24dp" android:state_checked="true" />
    <item android:id="@+id/normal" android:drawable="@drawable/or_symbol_outline_24dp" android:state_checked="false" />

    <transition
        android:fromId="@id/checked"
        android:toId="@id/normal"
        android:drawable="@drawable/or_symbol_outline_24dp"/>

    <transition
        android:fromId="@id/normal"
        android:toId="@id/checked"
        android:drawable="@drawable/or_symbol_filled_24dp"/>

</animated-selector>