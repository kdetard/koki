<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NightAdjusted.Theme.Koki" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="o_mr1">@bool/light_status_nav</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/light_status_nav</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@drawable/round_autofill_highlight</item>
    </style>

    <!-- The final theme we use -->
    <style name="Theme.Koki" parent="NightAdjusted.Theme.Koki" />

    <style name="NightAdjusted.Widget.Koki.IntroLayout" parent="Theme.Koki">
        <item name="background">@drawable/light_background</item>
        <item name="android:background">@drawable/light_background</item>
    </style>

    <style name="Widget.Koki.IntroLayout" parent="NightAdjusted.Widget.Koki.IntroLayout" />

    <style name="Widget.Koki.TextInputLayout" parent="">
        <item name="shapeAppearance">?attr/shapeAppearanceCornerLarge</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.Koki.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Koki</item>
    </style>

    <style name="Theme.Koki.Brand.TextAppearance" parent="">
        <item name="fontFamily">@font/nicomoji_regular</item>
        <item name="android:fontFamily">@font/nicomoji_regular</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>