<?xml version="1.0" encoding="utf-8"?>
<resources
    <style name="Widget.Koki" parent=""/>

    <style name="DefaultListItemContainer">
        <item name="android:layout_width">match_parent</item>
        <!--<item name="android:focusable">true</item>-->
        <!--<item name="android:background">@drawable/list_selector_background_default</item>-->
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="TwoLineListItemContainer" parent="DefaultListItemContainer">
        <item name="android:layout_height">72dp</item>
        <item name="android:minHeight">72dp</item>
    </style>

    <style name="ListItemIconPrimary">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:contentDescription">Preview image</item>
    </style>

    <style name="Widget.Koki.Card">
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">150dp</item>
    </style>

    <style name="Widget.Koki.CardSmall" parent="Widget.Koki.Card">
        <item name="android:layout_width">200dp</item>
    </style>

    <style name="Widget.Koki.CardLarge" parent="Widget.Koki.Card">
        <item name="android:layout_width">300dp</item>
    </style>

    <style name="cartview">
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
    </style>

    <style name="dayofweek">
        <item name="android:textSize">32sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.Koki.IndexMedium" parent="@style/TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">50sp</item>
    </style>
    <style name="Temperature_range">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#9C313838</item>
    </style>
    <style name="weather_type">
        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="level_of_air">
        <item name="android:textSize">25sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="rain_fall">
        <item name="android:textSize">25sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="title">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#CFC5C5</item>
    </style>
    <style name="humidity_values">
        <item name="android:textSize">35sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="value">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
