<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="false"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/openAppAuthLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Open AppAuth login screen" />

    <Button
        android:id="@+id/openRestLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open REST login screen"

        />

    <Button
        android:id="@+id/openSignupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open REST sign up screen" />

</LinearLayout>